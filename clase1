int ledR = 9;   // Declara la variable 'ledR' y le asigna el pin 9 (para un LED rojo)
int ledV = 10;  // Declara la variable 'ledV' y le asigna el pin 10 (para un LED verde)

void setup() {
  // Esta función se ejecuta una sola vez al iniciar el programa

  pinMode(ledV, OUTPUT);  // Configura el pin del LED verde como salida
  pinMode(ledR, OUTPUT);  // Configura el pin del LED rojo como salida
}

void loop() {
  // Esta función se repite constantemente mientras el Arduino esté encendido

  // --- Primera parte: Encendido y apagado digital del LED verde ---
  digitalWrite(ledV, 1);  // Enciende el LED verde (HIGH = 1)
  delay(500);             // Espera 500 milisegundos (0.5 segundos)
  digitalWrite(ledV, 0);  // Apaga el LED verde (LOW = 0)
  delay(500);             // Espera medio segundo antes de continuar

  // --- Segunda parte: Encendido gradual del LED verde usando PWM ---
  analogWrite(ledV, 50);   // Enciende el LED con brillo bajo (valor PWM = 50 de 255)
  delay(500);
  analogWrite(ledV, 100);  // Aumenta el brillo
  delay(500);
  analogWrite(ledV, 150);  // Brillo medio
  delay(500);
  analogWrite(ledV, 200);  // Brillo alto
  delay(500);
  analogWrite(ledV, 250);  // Brillo casi máximo
  delay(500);
  analogWrite(ledV, 0);    // Apaga el LED (brillo = 0)
  delay(500);
}
